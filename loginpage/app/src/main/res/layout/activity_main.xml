<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30sp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="30sp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:text="Login Page"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="sans-serif-black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="25sp"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium">

    </TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_perm_identity_24"
        android:drawablePadding="10sp"
        android:hint="Type your username"
        android:ems="20"
        android:textSize="20sp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:id="@+id/username"
        android:inputType="textPersonName">

    </EditText>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="25sp"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium">

    </TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:drawablePadding="10sp"
        android:hint="Type your password"
        android:inputType="textPassword"
        android:ems="20"
        android:textSize="20sp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:id="@+id/password">

    </EditText>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot password?"
        android:gravity="right"
        android:textColor="@color/purple_500"
        android:layout_marginBottom="20sp">

    </TextView>

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient1"
        android:text="LOGIN"
        android:textColor="@color/white"
        tools:ignore="DuplicateSpeakableTextCheck"
        android:onClick="onClick"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Don't have an account?"
        android:gravity="right"
        android:textColor="@color/purple_500"
        android:layout_marginTop="20sp">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Or SignUp with"
        android:gravity="center"
        android:layout_margin="25sp">

    </TextView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:src="@mipmap/facebook"
            android:layout_margin="5sp"
            android:id="@+id/imgbtnFacebook"
            android:onClick="gotoFacebook">
        </ImageView>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:src="@mipmap/google"
            android:layout_margin="5sp"
            android:id="@+id/imgbtnGoogle"
            android:onClick="gotoGoogle">
        </ImageView>
        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:gravity="center"
            android:src="@mipmap/twitter"
            android:layout_margin="5sp"
            android:id="@+id/imgbtnTwitter"
            android:onClick="gotoTwitter">
        </ImageView>
    </LinearLayout>
</LinearLayout>
